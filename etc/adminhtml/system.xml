<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="configuration" translate="label" type="text" sortOrder="10" showInDefault="1" showInStore="0">
            <class>separator-top</class>
            <label>Configuration</label>
            <tab>atma</tab>
            <resource>Magento_Backend::admin</resource>
            <group id="general" translate="label" type="text" sortOrder="20" showInDefault="1" showInStore="0">
                <label>Facebook Sync</label>
                <field id="enable_fb_sync" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Enable or disable fb sync</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Cron runs daily at 17:00 and posts all new products created that day</comment>
                </field>
                <field id="fb_page_id" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Facebook Page ID</label>
                    <comment>Enter your Facebook Page ID (numeric ID, not the username)</comment>
                    <validate>required-entry validate-number</validate>
                </field>
                <field id="fb_access_token" translate="label" type="obscure" sortOrder="40" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Facebook Page Access Token</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                    <comment>Enter your Facebook Page Access Token with pages_manage_posts and pages_read_engagement permissions</comment>
                    <validate>required-entry</validate>
                </field>
                <field id="fb_post_image" translate="label" type="image" sortOrder="50" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Facebook Post Image</label>
                    <backend_model>Atma\FacebookSync\Model\Config\Backend\Image</backend_model>
                    <upload_dir config="system/filesystem/media" scope_info="1">atma/facebook_sync</upload_dir>
                    <base_url type="media" scope_info="1">atma/facebook_sync</base_url>
                    <comment>Upload an image to use for all Facebook posts. Allowed file types: jpg, jpeg, gif, png, webp. If not set, product images will be used.</comment>
                </field>
            </group>
        </section>
    </system>
</config>
